<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Groups -->
    <record id="group_whatsapp_user" model="res.groups">
        <field name="name">WhatsApp User</field>
        <field name="privilege_id" ref="sales_team.res_groups_privilege_sales" />
        <field name="implied_ids" eval="[(4,ref('sales_team.group_sale_salesman'))]" />
        <field name="comment">Users who can send WhatsApp messages from CRM.</field>
    </record>

    <record id="group_whatsapp_manager" model="res.groups">
        <field name="name">WhatsApp Manager</field>
        <field name="privilege_id" ref="sales_team.res_groups_privilege_sales" />
        <field name="implied_ids" eval="[(4, ref('crm_whatsapp_integration.group_whatsapp_user'))]"/>
        <field name="comment">Users who can configure WhatsApp integration settings</field>
    </record>
    

</odoo>